<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fengfang.dao.IUserDao">
    <!--定义一个resultMap用于将类中属性与表字段建立关联-->
    <resultMap id="userMap" type="user">
        <id column="id" property="id"/>
        <result property="userName" column="name" />
        <result property="userPassword" column="pwd" />
    </resultMap>
    <!--使用resultMap进行处理-->
    <!--还可以选择使用别名，但一般不建议这么做-->
    <select id="findAll" resultMap="userMap">
        select * from user;
    </select>
<!--使用查询SQL别名
    <select id="findAll" resultMap="com.fengfang.domain.User">
        select id,name as userName,pwd as userPassword from user
    </select>-->

    <select id="findAllPages" parameterType="map" resultMap="userMap">
        select * from user limit #{startIndex},#{pageSize}
    </select>

    <select id="findAllBowBounds" resultMap="userMap">
        select * from user
    </select>
</mapper>